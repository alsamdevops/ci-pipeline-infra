pipeline {
    agent any

    environment {
        AWS_REGION = "us-east-1"
        KEY_NAME   = "ansible-key"
    }

    stages {
        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve -var key_name=$KEY_NAME'
                }
            }
        }

        stage('Generate Inventory') {
            steps {
                dir('terraform') {
                    script {
                        def inventory = sh(script: "terraform output -raw ansible_inventory", returnStdout: true).trim()
                        writeFile file: "../ansible/inventory", text: inventory
                    }
                }
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                dir('ansible') {
                    sh 'ansible-playbook playbook.yml'
                }
            }
        }
    }
}

